terraform {
  required_version = ">= 1.5.0"

  required_providers {
    azurerm = {
      source  = "hashicorp/azurerm"
      version = "~> 4.57"
    }
    random = {
      source  = "hashicorp/random"
      version = "~> 3.6"
    }
  }
}

provider "azurerm" {
  features {}

  # If set, Terraform uses this subscription explicitly; otherwise Azure CLI context may be used.
  subscription_id = var.subscription_id != "" ? var.subscription_id : null
}
